<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="12dp"
    android:paddingBottom="12dp"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/imageView_itemRcmModel_creatorAvatar"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/user_profile"/>


    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="1">
        <TextView
            android:id="@+id/textView_itemRcmModel_modelName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Model name" />
        <TextView
            android:id="@+id/textView_itemRcmModel_modelDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginBottom="4dp"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:textSize="14sp"
            tools:text="USTH team is proud to release Model, the most powerful model ever created."/>
        <TextView
            android:id="@+id/textView_itemRcmModel_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ellipsize="marquee"
            android:maxLines="1"
            android:textSize="14sp"
            tools:text="GP2023"/>

    </LinearLayout>

    <TextView
        android:id="@+id/textView_ItemRcmModel_usage"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:layout_marginStart="12dp"
        android:text="@string/all_0"
        android:textSize="18sp"
        android:textStyle="bold"
        tools:text="1000"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="12dp"
        android:baselineAlignBottom="true"
        android:src="@drawable/baseline_auto_fix_high_24"
        android:tint="?attr/colorOnSurface"/>

</LinearLayout>