<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:padding="24dp">

    <TextView
        android:id="@+id/textView_resultInfer_headline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TableLayout
        android:id="@+id/tableLayout_resultInfer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:stretchColumns="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textView_resultInfer_headline">
        <TableRow>
            <TextView
                android:id="@+id/textView_resultInfer_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MSE" />
            <TextView
                android:id="@+id/textView_resultInfer_confidence"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="65467184.5" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/textView_resultInfer_label2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R^2" />
            <TextView
                android:id="@+id/textView_resultInfer_confidence2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="0.0075" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/textView_resultInfer_label3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="N" />
            <TextView
                android:id="@+id/textView_resultInfer_confidence3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="3042.78 mg/kg" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/textView_resultInfer_label4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="P" />
            <TextView
                android:id="@+id/textView_resultInfer_confidence4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="4409.6 mg/kg" />
        </TableRow>
        <TableRow>
            <TextView
                android:id="@+id/textView_resultInfer_label5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="K" />
            <TextView
                android:id="@+id/textView_resultInfer_confidence5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:text="40387.5 mg/kg" />
        </TableRow>
    </TableLayout>

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.Material3.Button.TextButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/Close"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tableLayout_resultInfer"/>

</androidx.constraintlayout.widget.ConstraintLayout>