<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.profile.InfoFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="1">

        <TableRow>
            <TextView
                android:text="@string/first_name"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                tools:text="A"
                android:gravity="end"
                android:padding="8dp"
                android:textSize="18sp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/last_name"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                tools:text="Nguyen Van"
                android:gravity="end"
                android:padding="8dp"
                android:textSize="18sp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/born"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                tools:text="02/09/1945"
                android:gravity="end"
                android:padding="8dp"
                android:textSize="18sp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/sex"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                tools:text="Hidden"
                android:gravity="end"
                android:padding="8dp"
                android:textSize="18sp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/phone_num"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                tools:text="0912345678"
                android:gravity="end"
                android:padding="8dp"
                android:textSize="18sp"/>
        </TableRow>

        <TableRow>
            <TextView
                android:text="@string/address"
                android:padding="8dp"
                android:textStyle="bold"
                android:textSize="18sp"/>
            <TextView
                tools:text="18 Hoang Quoc Viet, Ha Noi"
                android:gravity="end"
                android:padding="8dp"
                android:textSize="18sp"/>
        </TableRow>
    </TableLayout>
</androidx.constraintlayout.widget.ConstraintLayout>