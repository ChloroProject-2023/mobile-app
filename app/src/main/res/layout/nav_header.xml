<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="175dp"
    android:fitsSystemWindows="true">

    <ImageView
        android:id="@+id/imageview_drawerheader_avatar"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="25dp"
        android:contentDescription="@string/contentDescription_avatar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/ic_launcher_round" />

    <TextView
        android:id="@+id/textview_drawerheader_username"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:gravity="center_vertical"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/imageview_drawerheader_avatar"
        app:layout_constraintStart_toEndOf="@+id/imageview_drawerheader_avatar"
        app:layout_constraintTop_toTopOf="@+id/imageview_drawerheader_avatar" />
</androidx.constraintlayout.widget.ConstraintLayout>